<h1><%= image_tag @user.gravatar_url, :class => "gravatar" %> <%= @user.first_name %></h1>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %><br>

<% if current_user == @user %>
  <%= render 'posts/shared/post_form' %>
<% end %>

<br><br>

<% if @user.posts.any? %>
  <div>
    <%= render 'posts/shared/show', :user => @user %>
  </div>
<% else %>
  <h6>No posts yet</h6>
<% end %>
