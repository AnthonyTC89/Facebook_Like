<h1>Hello <%= current_user.first_name %></h1>

<%= render 'posts/shared/post_form' %>

<% if current_user.posts.any? %>
  <ul>
    <% current_user.posts.each do |post| %>
      <li><%= post.content %> <%= link_to 'delete', post, method: :delete,
          data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
<% end %>
