<% if post.comments.any? %>
  <ul>
    <% post.comments.each do |comment| %>
      <li>
        <%= comment.user.first_name %>:
        <%= comment.content %>
        <%= my_time(comment) %>
        <%= link_to 'delete comment', comment, method: :delete,
                                  data: { confirm: "Are you sure?" } %>
      </li><br>
    <% end %>
  </ul>
<% end %>
